{
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "eslint.config.mjs",
    "./jest.setup.ts",
    "./jest.config.ts"
  ]
}
